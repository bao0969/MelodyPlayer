            <gradient
                android:type="radial"
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="80">
                <item android:offset="0.0" android:color="#FF1E0035"/> <!-- Tím đậm -->
                <item android:offset="0.5" android:color="#FF32024A"/> <!-- Hồng neon -->
                <item android:offset="1.0" android:color="#FF000010"/> <!-- Đen tím -->

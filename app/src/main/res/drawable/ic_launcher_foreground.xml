                <item android:offset="0.75" android:color="#FF7B68EE"/>
                <item android:offset="1.0" android:color="#FF4B0082"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- Vòng giữa sáng xanh -->
    <path
        android:pathData="M54,38 a16,16 0 1,1 -0.1,0z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="radial"
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="16">
                <item android:offset="0.0" android:color="#FF00FFFF"/>
                <item android:offset="1.0" android:color="#FF1E90FF"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- Tâm nhỏ phát sáng -->
